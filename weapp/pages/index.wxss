.item {
  color: #333333;
  width: 100%;
  height: 80rpx;
  text-align: left;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.5rpx solid #cccccc;
}
.item .left {
  margin-left: 30rpx;
}
.item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.item .right {
  margin-right: 30rpx;
  color: #949494;
}
.right-container {
  display: flex;
  align-items: center;
  color: #949494;
}
.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bottom .tips {
  font-size: 28rpx;
  padding-bottom: 20rpx;
  width: 100%;
  color: #ff3167;
  text-align: center;
  border-bottom: 0.5rpx solid #cccccc;
}
.bottom .pay {
  padding: 3rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom .pay .money {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}
.bottom .pay .money label:nth-child(2) {
  color: #ff3167;
  display: inline-block;
}
.bottom .pay .confirm {
  margin-right: 30rpx;
  padding: 30rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  color: white;
  background: linear-gradient(90deg, #FC8D6E, #FFBD85);
}

